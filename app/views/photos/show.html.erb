<%- model_class = Photo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt></dt>
  <dd><%= image_tag photo_get_photo_path(@photo), :class => 'img-responsive' %></dd>
  <dt><strong>誰が写ってる？</strong></dt>
  <dd>
  	<% @photo.members.each do |m| %>
  		<%= m.name %><br>
  	<% end %>
  </dd>
  <dt><strong>写ってるメンバーを設定</strong></dt>
  <dd>
  	<%= tag_panel @photo %>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              photos_path, :class => 'btn btn-default btn-lg'  %>

<script>
  $(function(){
  	set_tag_button_event();
  });
</script>
