<%- model_class = Photo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt></dt>
  <dd><%= image_tag photo_get_photo_path(@photo), :class => 'img-responsive' %></dd>
  <dt><strong>元ページ</strong></dt>
  <dd>
  	<%= link_to @photo.url, @photo.url %>
  </dd>
  <dt><strong>誰が写ってる？</strong></dt>
  <dd>
  	<%= tag_panel @photo %>
  </dd>
</dl>

<div class="row">
  <div class="col-md-4">
  	<%= link_to "前の画像へ", photo_path(@photo.previous.id), :class => 'btn btn-default btn-lg' %>
  	<%= link_to "前のタグづけしていない画像へ", photo_path(@photo.previous_notag.id), :class => 'btn btn-default btn-lg' %>
  </div>
  <div class="col-md-4 ">
  	<div class="btn-center">
      <%= link_to "戻る", "#", :class => 'btn btn-default btn-lg back-button'  %>
    </div>
  </div>
  <div class="col-md-4">
  	<%= link_to "次のタグ付けしていない画像へ", photo_path(@photo.next_notag.id), :class => 'btn btn-default btn-lg' %>
  	<%= link_to "次の画像へ", photo_path(@photo.next.id), :class => 'btn btn-default btn-lg' %>
  </div>
</div>
